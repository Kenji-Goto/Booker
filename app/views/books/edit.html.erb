<main>
  <div class = "book-new">
    <h2 class="edit">Editing Book</h2>
    <% if @book.errors.any? %>
      <div class="create-error">
        <h3 class="create-error-count"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul class="create-error-message">
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end%>
        </ul>
      </div>
    <% end %>
    <p class="edit-title">Title</p>
    <%= form_with model: @book do |f| %>
    <%= f.text_field :title %>
    <p class="edit-body">Body</p>
    <%= f.text_area :body %></br>
    <div class="edit-submit"><%= f.submit "Update Book" %></div>
  </div>
    <div class="menu">
    <%= link_to "Show",book_path(@book.id) %>
    |
    <%= link_to "Back",books_path %>
    </div>
  <% end %>
</main>